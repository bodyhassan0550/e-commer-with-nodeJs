<%-include('../includes/nav.ejs')%>

<main>
  <% if (orders.length > 0) { %>
  <h1>Your Orders</h1>
  <ul>
    <% orders.forEach(order => { %>
    <li>
      <h3>Order ID: <%= order._id %></h3>
      <ul>
        <% order.product.forEach(p => { %>
        <li>
          <strong>Product:</strong> <%= p.product.title %><br />
          <strong>Quantity:</strong> <%= p.quantity %><br />
        </li>
        <% }) %>
      </ul>
    </li>
    <a href="/orders/<%=orders._id%>">Download Invoice</a>

    <% }) %>
  </ul>

  <% } else { %>
  <h1>No orders found...</h1>
  <% } %>
</main>

<%-include('../includes/end.ejs')%>

<style>
  body {
    font-family: Arial, sans-serif;
  }
  main {
    padding: 20px;
    max-width: 800px;
    margin: auto;
  }
  ul {
    list-style-type: none;
    padding: 0;
  }
  li {
    background-color: #f9f9f9;
    margin: 10px 0;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
  }
  h3 {
    margin: 0 0 10px 0;
    color: #555;
  }
  a {
    text-decoration: none;
    color: #007bff;
  }
  a:hover {
    text-decoration: underline;
  }
</style>
